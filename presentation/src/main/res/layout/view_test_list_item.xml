<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/test_list_item_title_tv"
            android:textAppearance="@style/Github.TextAppearance.Roboto.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            tools:ignore="MissingConstraints"
            tools:text="Title"/>

    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/test_list_item_description_tv"
            android:textAppearance="@style/Github.TextAppearance.Roboto.Medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginStart="16dp"
            app:layout_constraintTop_toBottomOf="@id/test_list_item_title_tv"
            tools:ignore="MissingConstraints"
            tools:text="Description"/>

    <androidx.appcompat.widget.AppCompatCheckBox
            android:id="@+id/test_list_item_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            tools:ignore="MissingConstraints"/>

    <View android:layout_width="match_parent"
          android:layout_height="1dp"
          android:background="@color/charade"
          android:layout_marginTop="16dp"
          app:layout_constraintTop_toBottomOf="@id/test_list_item_checkbox"
          tools:ignore="MissingConstraints"/>

</androidx.constraintlayout.widget.ConstraintLayout>