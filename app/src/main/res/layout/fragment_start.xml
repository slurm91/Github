<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <androidx.constraintlayout.widget.Guideline
            android:id="@+id/fragment_start_left_input_fields_guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.15"/>

    <androidx.constraintlayout.widget.Guideline
            android:id="@+id/fragment_start_right_input_fields_guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.85"/>

    <LinearLayout
            android:id="@+id/fragment_start_sign_in_input_fields_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintLeft_toLeftOf="@id/fragment_start_left_input_fields_guideline"
            app:layout_constraintRight_toRightOf="@id/fragment_start_right_input_fields_guideline"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:ignore="MissingConstraints">

        <com.google.android.material.textfield.TextInputLayout
                style="@style/Github.TextInputLayout.Outlined"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Login">

            <com.google.android.material.textfield.TextInputEditText
                    style="@style/Github.MaterialEditText.Default"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="zhilko1991@gmail.com"/>

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
                style="@style/Github.TextInputLayout.Outlined"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Password">

            <com.google.android.material.textfield.TextInputEditText
                    style="@style/Github.MaterialEditText.Default"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="blablabla7777"/>

        </com.google.android.material.textfield.TextInputLayout>

    </LinearLayout>

    <androidx.constraintlayout.widget.Guideline
            android:id="@+id/fragment_start_left_buttons_guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.3"/>

    <androidx.constraintlayout.widget.Guideline
            android:id="@+id/fragment_start_right_buttons_guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.7"/>

    <com.google.android.material.button.MaterialButton
            android:id="@+id/fragment_start_sign_in_btn"
            style="@style/Github.MaterialButton.Outlined.Default"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Sign in"
            app:layout_constraintTop_toBottomOf="@+id/fragment_start_sign_in_input_fields_layout"
            app:layout_constraintLeft_toLeftOf="@id/fragment_start_left_buttons_guideline"
            app:layout_constraintRight_toRightOf="@id/fragment_start_right_buttons_guideline"
            tools:ignore="MissingConstraints"/>

    <com.google.android.material.button.MaterialButton
            android:id="@+id/fragment_start_sign_up_btn"
            style="@style/Github.MaterialButton.Filled.Default"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/fragment_start_sign_in_btn"
            app:layout_constraintLeft_toLeftOf="@id/fragment_start_left_buttons_guideline"
            app:layout_constraintRight_toRightOf="@id/fragment_start_right_buttons_guideline"
            android:text="Sign up"
            tools:ignore="MissingConstraints"/>

    <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/fragment_start_go_to_test_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:text="Go To Test"
            tools:ignore="MissingConstraints"/>

</androidx.constraintlayout.widget.ConstraintLayout>